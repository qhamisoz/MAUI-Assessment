             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Meal.UI.ViewModels"
             xmlns:m="clr-namespace:Meal.UI.Models"
             x:Class="Meal.UI.MainPage"
             x:DataType="vm:MainViewModel">

